<div class = "mx-auto" >
    <div class="mx-auto bg-white shadow-[0_-35px_60px_-20px] border-b-2 border-gray-300">
        <div class="p-3 grid border-solid border-b border-gray-600">
            <div class="justify-self-center flex gap-2 font-bold">
                <h3><%=@user.firstName%></h3>
                <h3><%=@user.lastName%></h3>
            </div>
            <% if @user.friends.any?%>
                <div class="justify-self-center font-bold text-gray-500 hover:underline" >
                    <%= @user.friends.count %>
                    <%if @user.friends.count > 1%>
                        friends
                    <% else %>
                        friend
                    <% end %>
                </div>
            <% end %>
        </div>
        <div class="p-4 font-bold text-gray-500 flex gap-8 justify-center">
            <div>Posts</div>
            <div>About</div>
            <div>Friends</div>
            <%= render 'friend_requests'%>
        </div>
    </div>
    <%= turbo_frame_tag id="user_page_body" do %>
        <div class = "mx-auto grid justify-items-center">
                <%= link_to "New post",
                            new_post_path,
                            class: "btn btn--primary border-solid border-black border-b-2",
                            data: { turbo_frame: "new_post" }%>
        </div>
        <div class="grid">
            <%= turbo_frame_tag id="new_post" do %>
            <% end %>
            <%= turbo_frame_tag id="posts" do %>
                <div class="mt-5 grid gap-3">
                    <%= render @user.posts%>
                </div>
            <% end %>
        </div>
    <% end %>
</div>
