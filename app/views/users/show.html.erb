<div class = "mx-auto" >
    <div data-controller="user-page" class="mb-5 mx-auto bg-white shadow-[0_-35px_60px_-20px] border-b-2 border-gray-300">
        <div class="p-3 grid border-solid border-b border-gray-600">
            <div class="justify-self-center flex gap-2 font-bold">
                <h3><%=@user.firstName%></h3>
                <h3><%=@user.lastName%></h3>
            </div>
            <% if @user.friends.any?%>
                <div class="justify-self-center font-bold text-gray-500 hover:underline" >
                    <%if @user.friends.count > 1%>
                        <% string = "#{@user.friends.count} friends" %>
                    <% else %>
                        <% string = "1 friend" %>
                    <% end %>
                 <%= string%>
                </div>
            <% end %>
        </div>
        <div>
            <div class="p-4 font-bold text-gray-500 flex gap-8 justify-center">
                <div data-action = "click->user-page#replaceUserPageBody" data-user-page-frame-name-param = "posts">Posts</div>
                <div data-action = "click->user-page#replaceUserPageBody" data-user-page-frame-name-param = "about">About</div>
                <div data-action = "click->user-page#replaceUserPageBody" data-user-page-frame-name-param = "friends">Friends</div>
                <div data-action = "click->user-page#replaceUserPageBody" data-user-page-frame-name-param = "friend_requests">Friend Requests</div>
            </div>
            <div data-user-page-target="userPageBody">
                <div data-user-page-target="posts">text1</div>
                <div data-user-page-target="about" hidden="">text2</div>
                <div data-user-page-target="friends" hidden="">text3</div>
                <div data-user-page-target="friend_requests" hidden="">text4</div>
            </div>
        </div>
    </div>
</div>
